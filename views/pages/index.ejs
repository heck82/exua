<%include ../partials/head%>
<%include ../partials/header%>

<table class="table table-hover">
<%items.forEach(function(item){%>
	<tr>
		<td class="col-xs-3">
			<a class="btn btn-default" href="/item/view/<%=item._id%>">
				<img height="160" width="120" alt="no image available" src="<%=item.coverImageUrl%>">
			</a>
		</td>
		<td class="col-xs-3">
			<a style="text-decoration: none" href="/item/view/<%=item._id%>">
				<h3><%=item.name%></h3>
			</a>
			<p><b>category: </b><%=item.category%></p>
			<p><b>tags: </b>
				<%item.tags.forEach(function(tag){%>
				<a href="/tags/<%=tag%>"><%=tag%></a>
				<%})%>
			</p>
		</td>
		<td>
			<p><%=item.description%></p>
		</td>
	</tr>
<%})%>
</table>


<nav aria-label="Page navigation">
	<ul class="pagination">
		<li>
			<a href="/list?page=1" aria-label="Previous">
				<span aria-hidden="true">&laquo;</span>
			</a>
		</li>
		<%for(var i = 1; i <= page ; i++){%>
		<li><a href="/list?page=<%=i%>"><%=i%></a></li>
		<%}%>
		<li>
			<a href="/list?page=<%=page%>" aria-label="Next">
				<span aria-hidden="true">&raquo;</span>
			</a>
		</li>
	</ul>
</nav>
<%include ../partials/footer%>